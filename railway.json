{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "bash ./start.sh",
    "nixpacks": {
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs-24"] 
        }
      }
    }
  },
  "deploy": {
    "startCommand": "exec java -jar backend/target/*.jar --server.port=$PORT"
  }
}
