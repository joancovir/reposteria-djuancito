{
  "build": {
    "builder": "nixpacks",
    "nixpacksPlan": {
      "providers": ["nodejs"],
      "phases": {
        "setup": {
          "nixPkgs": ["..."],
          "nixPkgsArch": "x86_64-linux",
          "nixpkgs": "https://github.com/NixOS/nixpkgs/archive/23.11.tar.gz"
        },
        "build": {
          "cmds": [
            "npm install",
            "npm run build -- --configuration production"
          ]
        }
      },
      "start": {
        "cmd": "java -jar backend/target/*.jar --server.port=$PORT"
      },
      "variables": {
        "NODE_VERSION": "20"
      }
    }
  }
}
